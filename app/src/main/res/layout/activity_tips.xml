<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="127dp"
        android:text="Tips"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="190dp"
        android:layout_below="@id/tipsTitle"
        android:layout_marginTop="138dp">

        <TextView
            android:id="@+id/tipsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:textSize="24dp">
            <!-- Tips will be set programmatically -->
        </TextView>
    </ScrollView>

    <Button
        android:id="@+id/randomTipButton"
        android:layout_width="249dp"
        android:layout_height="70dp"
        android:layout_below="@id/tipsContent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="91dp"
        android:text="Get Random Tip" />
</RelativeLayout>